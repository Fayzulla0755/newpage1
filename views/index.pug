include header
body
include navbar
.container.mt-5.d-flex.justify-content-around(style="flex-wrap: wrap")
    each db, i in data
        .card(style="width: 350px").mx-2.my-2
            img.card-img-top(src=db.img alt='...' style="width: 100%; height: 50%;")
            ul.list-group.list-group-flush
                li.list-group-item.text-primary= db.name
                li.list-group-item.text-primary= db.manufacturer
                li.list-group-item.text-primary= db.price
            .card-body
                .row.mt-2 
                    .col-md-3
                        ion-icon(name="eye-outline") 
                        span= db.views
                    .col-md-3
                        a(href="/add"+db.id) 
                            ion-icon(name="settings-outline")
                    .col-md-2
                        a(href="/add/del"+db.id)  
                            ion-icon(name="trash-outline")
                    .col-md-4= db.date.toDateString()
                .container.mt-4.d-grid(style="position: relative")
                    button(data-bs-toggle='collapse' data-bs-target=`#demo${i}`).btn.btn-primary.d-block Batafsil
                    .collapse.bg-light(style="position: absolute; top: 45px; z-index:1 " id=`demo${i}`)= db.comment